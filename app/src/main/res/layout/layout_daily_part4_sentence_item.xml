<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_around_5"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dp_10"
    android:padding="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_sentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialy_part4_sentence_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_18"/>

    <ImageView
        android:id="@+id/iv_sentence_voice"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/tv_sentence"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_daily_part3_words_voice"/>

</RelativeLayout>